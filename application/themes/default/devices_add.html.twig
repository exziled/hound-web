{% extends "_layout/index.html.twig" %}

{% block head %}
	{{ parent() }}
{% endblock %}

{% block content %}
	<div class="page-header">
		<h1>Add a {{proj_name}} <small>What are we monitoring today?</small></h1>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">Please enter the required information about your {{proj_name}} device below</h3>
					</div>
					<div class="panel-body">
						<form accept-charset="UTF-8" role="form" method="POST" action="{{action}}">
							<fieldset>
								<div class="form-group">
									<label for="name">{{proj_name}} Node Name</label>
									<input class="form-control" placeholder="Living Room Entertainment Center" name="name" type="text">
								</div>
								<div class="form-group">
									<label for="core_id">{{proj_name}} Core ID</label>
									<input class="form-control" placeholder="..." name="core_id" type="text">
								</div>
								<div class="form-group">
									<label for="access_token">{{proj_name}} Access Token</label>
									<input class="form-control" placeholder="..." name="access_token" type="text">
								</div>
								<input class="btn btn-lg btn-success btn-block" type="submit" value="Go">
							</fieldset>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block foot %}
	{{ parent() }}
{% endblock %}