{% extends "_layout/index.html.twig" %}

{% block head %}
	{{ parent() }}
{% endblock %}

{% block content %}
	<div class="page-header">
		<h1>Dashboard <small>Your {{proj_name}} system at a glance</small></h1>
	</div>
	<div class="row">
		<div class="col-lg-3 col-md-6">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-3">
							<i class="fa fa-plug fa-5x"></i>
						</div>
						<div class="col-xs-9 text-right">
							<div class="huge">{{numNodes}}</div>
							<div>Devices</div>
						</div>
					</div>
				</div>
				<a href="#">
					<a href="{{site_url("devices")}}">
						<div class="panel-footer">
							<span class="pull-left">View Details</span>
							<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
							<div class="clearfix"></div>
						</div>
					</a>
				</a>
			</div>
		</div>

		

		<div class="col-lg-3 col-md-6">
			<div class="panel panel-yellow">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-3">
							<i class="fa fa-power-off fa-5x"></i>
						</div>
						<div class="col-xs-9 text-right">
							<div class="huge">7</div>
							<div>kWh used yesterday</div>
						</div>
					</div>
				</div>
				<a href="#">
					<div class="panel-footer">
						<span class="pull-left">Investigate</span>
						<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
						<div class="clearfix"></div>
					</div>
				</a>
			</div>
		</div>

		<div class="col-lg-3 col-md-6">
			<div class="panel panel-red">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-3">
							<i class="fa fa-shopping-cart fa-5x"></i>
						</div>
						<div class="col-xs-9 text-right">
							<div class="huge">{{newModels}}</div>
							<div>New {{proj_name}} Model{{newModels==1?'':'s'}}!</div>
						</div>
					</div>
				</div>
				<a href="#">
					<div class="panel-footer">
						<span class="pull-left">Learn More</span>
						<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
						<div class="clearfix"></div>
					</div>
				</a>
			</div>
		</div>

		<div class="col-lg-3 col-md-6">
			<div class="panel panel-green">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-3">
							<i class="fa fa-gears fa-5x"></i>
						</div>
						<div class="col-xs-9 text-right">
							<div class="huge">&nbsp;</div>
							<div>Settings</div>
						</div>
					</div>
				</div>
				<a href="#">
					<div class="panel-footer">
						<span class="pull-left">Configure</span>
						<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
						<div class="clearfix"></div>
					</div>
				</a>
			</div>
		</div>
	</div>

	<div class="panel panel-default">
        <div class="panel-heading">
            <i class="fa fa-bar-chart-o fa-fw"></i> Area Chart Example
            <div class="pull-right">
                <div class="btn-group">
                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                        Timespan
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li class="active"><a href="#">Day</a></li>
                        <li><a href="#">Week</a></li>
                        <li><a href="#">Month</a></li>
                        <li><a href="#">Year</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div id="morris-area-chart"></div>
        </div>
        <!-- /.panel-body -->
    </div>

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Nodes</h3>
		</div>
		<div class="panel-body">
			<p>You have {{numNodes}} nodes.</p>
			{% if numNodes %}<a href="{{site_url("devices")}}">List them</a> |{% endif %}
			<a href="{{site_url("devices/add")}}">Add some</a>
		</div>
	</div>
	<!-- <div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Account</h3>
		</div>
		<div class="panel-body">
			<p>Waiting on email verification @todo</p>
			<a>Resend the verification email</a>
		</div>
	</div> -->
	{# <div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Servers</h3>
		</div>
		<div class="panel-body">
			<p>You have {{numservers|default('0')}} Servers.</p>
			{% if numservers %}
				<a>Search them</a> | 
			{% endif %}
				<a>Add some</a>
		</div>
	</div> #}
{% endblock %}

{% block foot %}
	{{ parent() }}
{% endblock %}